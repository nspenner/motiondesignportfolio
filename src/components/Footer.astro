---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: 'Vimeo', url: 'https://vimeo.com/yourprofile' },
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/yourprofile' },
  { name: 'Email', url: 'mailto:contact@example.com' },
];
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Motion Designer</h3>
        <p>Bringing stories to life through motion and video.</p>
      </div>
      <div class="footer-section">
        <h4>Connect</h4>
        <ul class="social-links">
          {socialLinks.map(link => (
            <li>
              <a href={link.url} target="_blank" rel="noopener noreferrer">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} Motion Designer. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg) 0 var(--spacing-md);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .footer-section h3 {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .footer-section h4 {
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
    font-size: 1.1rem;
  }

  .footer-section p {
    color: var(--color-text-secondary);
  }

  .social-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .social-links a {
    color: var(--color-text-secondary);
    transition: var(--transition);
  }

  .social-links a:hover {
    color: var(--color-accent);
    transform: translateX(5px);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-md);
    text-align: center;
  }

  .footer-bottom p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
  }
</style>
